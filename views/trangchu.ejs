<html>
    <head>
        <title>Hello Socket IO</title>
        <script src="socket.io/socket.io.js"></script>
        <script src="jquery.js"></script>
        <script type="text/javascript">
            // goi dien len server
            var socket = io('http://localhost:3000');

            socket.on('server-send-data', function(data) {
                $('body').attr('bgColor', data);
            });

            $(document).ready(function() {
                $('#do').click(function() {
                    socket.emit('client-send-data', 'red');
                });
                $('#xanh').click(function() {
                    socket.emit('client-send-data', 'blue');
                });
                $('#vang').click(function() {
                    socket.emit('client-send-data', 'yellow');
                });
            });

        </script>

        <style type="text/css">
            #do, #xanh, #vang {
                width: 300px;
                height: 50px;
            }
            #do { background-color: red }
            #xanh { background-color: blue }
            #vang { background-color: yellow }
        </style>

    </head>
    <body>
        <div id="do"></div>
        <div id="xanh"></div>
        <div id="vang"></div>
    </body>
</html>
